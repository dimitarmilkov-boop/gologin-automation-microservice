# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/gologin_automation
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# GoLogin Configuration
GOLOGIN_TOKEN=your_gologin_api_token
GOLOGIN_API_URL=https://api.gologin.com/browser
MAX_CONCURRENT_PROFILES=10
PROFILE_SYNC_INTERVAL=900  # 15 minutes in seconds

# Security
API_SECRET_KEY=your-secret-key-change-this
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# AIOTT Integration
AIOTT_API_URL=https://api.aiott.com/v2
AIOTT_API_KEY=your_aiott_api_key

# Twitter/X OAuth Apps
AIOTT1_CLIENT_ID=your_aiott1_client_id
AIOTT1_CLIENT_SECRET=your_aiott1_client_secret
AIOTT1_CALLBACK_URL=https://thefeedwire.com/callback/aiott1

AIOTT2_CLIENT_ID=your_aiott2_client_id
AIOTT2_CLIENT_SECRET=your_aiott2_client_secret
AIOTT2_CALLBACK_URL=https://thefeedwire.com/callback/aiott2

AIOTT3_CLIENT_ID=your_aiott3_client_id
AIOTT3_CLIENT_SECRET=your_aiott3_client_secret
AIOTT3_CALLBACK_URL=https://thefeedwire.com/callback/aiott3

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO
ENABLE_METRICS=true